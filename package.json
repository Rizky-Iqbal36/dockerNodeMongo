{
  "name": "nodejsdocker",
  "version": "1.0.0",
  "description": "practice dockerization an express app",
  "main": "server.js",
  "scripts": {
    "commit": "npx git-cz",
    "dependency:local": "docker-compose up -d app database sonarqube",
    "sonarqube:local": "source resources/script/local-sonar.sh",
    "format": "prettier --write .",
    "start": "node server.js",
    "start:dev": "nodemon --legacy-watch server.js",
    "test": "mocha src/test/test.js",
    "lint": "eslint \"{src,resource,kubernetes}/**/*.js\" --fix"
  },
  "author": "rizky-iqbal",
  "license": "ISC",
  "dependencies": {
    "assert": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mocha": "^8.3.0",
    "mongoose": "^5.11.15"
  },
  "devDependencies": {
    "eslint": "^7.21.0",
    "faker": "^4.1.0",
    "git-cz": "^4.7.6",
    "husky": "^3.1.0",
    "jest": "^26.1.0",
    "jest-config": "^26.0.1",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  }
}
